{
  "manifest_version": 3,
  "name": "ChatArchive - Export AI Conversations",
  "version": "2.0.0",
  "description": "Export your AI conversations from ChatGPT, Google Gemini, and Claude AI to clean, formatted PDF documents.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png",
    "default_title": "Export AI Conversation"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus", "activeTab"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.ggpht.com/*",
    "https://*.gstatic.com/*",
    "https://lh3.googleusercontent.com/*",
    "https://files.oaiusercontent.com/*",
    "https://*.openai.com/*",
    "https://*.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/jspdf.umd.min.js", "injected.js"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}